<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="mb-3" style="width: 40rem;">
      <input name="post-title" class="form-control" type="text" value="{{post.title}}" />
      <span>({{post.post_url}})</span>
    </div>
    <div>
        by you on {{post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-secondary">Save post</button>
    <button type="button" class="delete-post-btn btn-secondary">Delete post</button>
  </form>
</article>

<form class="comment-form m-2">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-secondary">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>